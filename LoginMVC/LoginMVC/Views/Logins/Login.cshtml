    @{
        var a = TempData["msg"];
        
    }
    <script>
        if (@a===1)
        {
            Swal.fire({
                title: "Login Successful",
                icon: "success",
                confirmButtonText: "OK",
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to another action method
                    window.location.href = "/Logins/Add";
                }
            });
        }
        else
        {
            Swal.fire
                ({
                    title: "Login Faield",
                    icon: "warning",
                    button: "Retry!",
                });
            
        }
    </script>
