    <style>
        .login, .image {
            min-height: 100vh
        }
        body
       

        .bg-image {
            background-image: url("https://cdn.pixabay.com/photo/2021/08/25/20/42/field-6574455_1280.jpg");
            background-size: cover;
            background-position: center center
        }
    </style>

</head> 
<body style="margin:auto;padding:0">

    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="col-md-6 d-none d-md-flex bg-image"></div>
            <div class="col-md-6 bg-light">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-7 col-xl-6 mx-auto">
                                <h3 class="display-6 text-center fw-bold">LOGIN</h3> <br>


                                <form asp-action="Index" method="post">
                                    <div class="form-group mb-3">
                                        <label asp-for="EmailId" class="form-label fw-bold"></label>
                                        <input asp-for="EmailId" type="email" class="form-control rounded-pill border-0 shadow-sm px-4" placeholder="Email address" required autofocus />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Password" class="form-label fw-bold"></label>
                                        <input asp-for="Password" type="password" placeholder="Password" class="form-control rounded-pill border-0 shadow-sm px-4 text-danger" required autofocus />
                                    </div>
                                    <button type="submit" class="btn btn-danger btn-block text-uppercase mb-2 rounded-pill shadow-sm" asp-controller="Logins" asp-action="Login">Sign In</button>
                                    <a href="#" class="text-primary" style="float:right"> Forgot Password</a>
                                </form>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>







    
