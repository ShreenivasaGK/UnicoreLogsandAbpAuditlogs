<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoginMVC.styles.css" asp-append-version="true" />

    <style>


        .navbarr {
            background-color: rgb(240, 240, 240);
            width: 150px;
            position: absolute;
            left:0;
           top:0;
            height: 100%;
            
            overflow: hidden;
        }

            .navbarr a {
                color: black;
                text-decoration: none;
                
                text-align: center;
            }

            .navbarr ul {
                
                list-style: none;
                margin-top: 5vh;
                float: left;
            }

                 .navbarr ul li {
                    text-align: center; 
                    margin-bottom: 5vh;
                 }
       .navlist:hover{
           text-decoration:none;
           background-color:white;


       }
/* 
        .border{
            border-radius: 10px 10px 10px 10px;
           
            color: white;
        }

        a.border:active {
            border-radius: 10px 10px 0px 0px;
        } */
    </style>
       

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:rgb(240, 240, 240);">
            <div class="container-fluid">
              @*   <h4>Vita</h4> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item " style="margin-left:auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Logins" asp-action="Login">Login</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <nav class="navbarr">
        <h4 style="margin-top:10px;margin-left:10px;">Vita</h4>
        <ul class="list  text-center">
            <li class="navlist"><a asp-area="" asp-controller="Log" asp-action="Log" >UnicoreLogs</a></li>
            <li class="navlist"><a asp-area="" asp-controller="" asp-action="">AbpAuditLogs</a></li>
            <li class="navlist"><a asp-area="" asp-controller="Log" asp-action="LogsXML">Logs_Xml</a></li>
            @* <li><a href="#">About</a></li>
            <li><a href="#">News</a></li>
            <li><a href="#">Contact Us</a></li> *@
        </ul>
    </nav>






    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @*  <div class="container">
        &copy; 2024 - LoginMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div> *@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
